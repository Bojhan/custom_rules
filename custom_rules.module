    'create_custom_user' => array(
      'label' => t('Create custom user'),
      'group' => t('My custom actions'),
      'parameter' => array(
        // User login.
        'login' => array(
          'type' => 'text',
          'label' => t('Login'),
          'description' => t("The user's login."),
        ),
        // User password.
        'password' => array(
          'type' => 'text',
          'label' => t('Password'),
          'description' => t("The user's password."),
        ),
        // User email.
        'email' => array(
          'type' => 'text',
          'label' => t('Email'),
          'description' => t("The user's email."),
        ),
