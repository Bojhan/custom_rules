/**
 * Create custom user.
 */
function create_custom_user($login, $password,$email) {
  $fields = array(
    'name' => $login,
    'mail' => $email,
    'pass' => $password,
    'status' => 1,
    'init' => 'email address',
    'roles' => array(
      DRUPAL_AUTHENTICATED_RID => 'authenticated user',
    ),
  );
  $account = user_save('', $fields);
}
